@model RoleViewModel
@{
    ViewData["Title"] = "Update role";
}

<h2>@ViewData["Title"].</h2>
<hr />
<h4>Enter data to update the current role.</h4>
<br />

<form method="post" asp-controller="Role" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="col-2" asp-for="Name"></label>
        <div class="col-6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-2" asp-for="Description"></label>
        <div class="col-6">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-6">
            <button type="submit" class="btn btn-outline-primary">Update</button>
        </div>
    </div>
    <a asp-action="Index">Back to list</a>
</form>

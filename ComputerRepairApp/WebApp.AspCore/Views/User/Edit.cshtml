@model UserViewModel
@{
    ViewData["Title"] = "Update user";
}

<h2>@ViewData["Title"].</h2>
<hr />
<h4>Enter data to update the current user.</h4>
<br />

<form method="post" asp-controller="User" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="col-2" asp-for="Email"></label>
        <div class="col-6">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-2" asp-for="FirstName"></label>
        <div class="col-6">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>    
    <div class="form-group">
        <label class="col-2" asp-for="Surname"></label>
        <div class="col-6">
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-6">
            <button type="submit" class="btn btn-outline-primary">Update</button>
        </div>
    </div>
    <a asp-action="Index">Back to list</a>
</form>
